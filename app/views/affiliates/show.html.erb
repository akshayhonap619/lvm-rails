<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <h1 class="index-header text-center">
              <%= @affiliate.name %> </br>
              <small> Affiliate </small>
            </h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row show-button-row">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="col-md-6">
        <%= link_to edit_affiliate_path(@affiliate) do %>
          <button class="btn btn-primary">
            <span class="glyphicon glyphicon-pencil"></span> Edit
          </button>
        <% end %>
      </div>

      <div class="col-md-6 text-right">
        <%= link_to affiliate_path(@affiliate), method: :delete, data: { confirm: 'Are you sure you want to delete this affiliate?' } do %>
          <button class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span> Delete
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <div class="col-md-6 text-center">
                <h4> Affiliate Name </h4>
                <p> <%= @affiliate.name %> </p>
              </div>

              <div class="col-md-6 text-center">
                <h4> Email Address </h4>
                <p> <%= @affiliate.email %> </p>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 text-center">
                <h4> Address </h4>
                <p>
                  <%= @affiliate.address %>
                  <%= @affiliate.city %>
                  <%= @affiliate.state %>
                  <%= @affiliate.zip %>
                </p>
              </div>

              <div class="col-md-6 text-center">
                <h4> Website </h4>
                <p> <a href=<%= @affiliate.website %>> <%= @affiliate.website %> </a></p>
              </div>
            </div>

            <div class="row">
              <div class="col-md-4 text-center">
                <h4> Phone Number </h4>
                <p> <%= @affiliate.phone_number %> </p>
              </div>

              <div class="col-md-4 text-center">
                <h4> Twitter </h4>
                <p> <%= @affiliate.twitter %> </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
